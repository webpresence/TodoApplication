@model ToDoApplication.Models.CreateOrEditItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ToDoItemDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDoItemDto.ToDoListId" />
            <div class="form-group">
                <label asp-for="ToDoItemDto.Name" class="control-label"></label>
                <input asp-for="ToDoItemDto.Name" class="form-control" />
                <span asp-validation-for="ToDoItemDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItemDto.Description" class="control-label"></label>
                <input asp-for="ToDoItemDto.Description" class="form-control" />
                <span asp-validation-for="ToDoItemDto.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="ToDoItemDto.Status" class="control-label"></label>          
                <select asp-for="ToDoItemDto.Status" asp-items= "@Model.Statuses" class="form-control">

                </select>
                <span asp-validation-for="ToDoItemDto.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Home/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
